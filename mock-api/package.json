{
  "name": "artillery-mock-api",
  "version": "1.0.0",
  "description": "Mock API para testes com Artillery",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test:basic": "npx artillery run artillery/01-basic-test.yml --output reports/basic-report.json",
    "test:load": "npx artillery run artillery/02-load-test.yml --output reports/load-report.json",
    "test:stress": "npx artillery run artillery/03-stress-test.yml --output reports/stress-report.json",
    "test:all": "npm run test:basic && npm run test:load && npm run test:stress"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "artillery": "^2.0.27"
  }
}
